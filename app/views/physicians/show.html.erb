<p id="notice"><%= notice %></p>

<p>
  
  <h2><%= @physician.name %></h2>
</p>

<p>
  
  <strong>Speacialty: <%= @physician.specialty %></strong>
</p>
<hr>
<h3>Office Location</h3>
<table class="show_tables">
<tr>
<th>Street Address</th>
<th>Zip Code</th>
<th>Phone Number</th>
</tr>
<% @physician.offices.each do |office| %>
  <tr>
  <td><%= office.address %></td>
  <td><%= office.zip_code %></td>
  <td><%= office.phone %></td>
  </tr>
  <% end %>
</table>
<h3>Current Appointments</h3>
<table class="show_tables">
  <tr>
  <th> Patient Name</th>
  <th> Appointment Date</th>
  </tr>
  <% @physician.appointments.each do |appointment| %>
    <tr>
    <td><%= appointment.patient.name %></td>
    <td><%= appointment.visit %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_physician_path(@physician) %> |
<%= link_to 'Back', physicians_path %>
